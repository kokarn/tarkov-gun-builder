{
    "name": "tarkov-gun-builder",
    "version": "1.1.7",
    "private": false,
    "license": "ISC",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "files": [
        "dist",
        "readme.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kokarn/tarkov-gun-builder.git"
    },
    "babel": {
        "presets": [
            [
                "@babel/env",
                {
                    "modules": false
                }
            ],
            "@babel/preset-react"
        ],
        "plugins": [
            [
                "@babel/plugin-transform-react-jsx",
                {
                    "runtime": "automatic"
                }
            ]
        ]
    },
    "type": "module",
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "object-path": "^0.11.8",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "5.0.0",
        "react-tooltip": "^4.2.21",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "create-links": "",
        "prettier": "prettier --write .",
        "publish:npm": "rm -rf dist && mkdir dist && babel src/components -d dist --copy-files --keep-file-extension"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 4,
        "printWidth": 120
    },
    "devDependencies": {
        "@babel/cli": "^7.17.0",
        "@babel/preset-react": "^7.16.7",
        "@babel/plugin-transform-react-jsx": "^7.16.7"
    }
}
